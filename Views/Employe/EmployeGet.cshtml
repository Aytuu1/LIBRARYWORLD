@model LIBRARYMVC.Models.Entity.TBLEMPLOYES
@{
    ViewBag.Title = "EmployeGet";
    Layout = "~/Views/Shared/LıbraryLayout.cshtml";
}


<div class="col-md-6 mx-auto form-group " style="margin-top:12%">
    <h6 class="fw-bold text-xxl-center">Personel Güncelleme Sayfası</h6>
    <hr style="border:solid 2px black" />
    @using (Html.BeginForm("EmployeUpdate", "Employe", FormMethod.Post))
    {
        <div>
           
            <label >Personel ID</label>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })

            <br />

            <label>Personel Adı</label>
            @Html.TextBoxFor(x => x.EMPLOYE, new { @class = "form-control" })
        </div>
        <div class="mt-4">
            <button class="btn fw-semibold w-100" style="margin-top: 25px; margin-bottom: 50px; background-color: #202f44; color: aliceblue">Güncelle</button>
        </div>
    }

</div>
