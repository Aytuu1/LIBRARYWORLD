@using LIBRARYMVC.Models.Entity
@model List<TBLBOOK>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LıbraryLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kitaplar</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/table.css" />
  
</head>
<body>
    <div class="container">
        <h2>Kitaplar</h2>
        <div class="mt-4"></div>
        @using (Html.BeginForm("BookSearch", "Book", FormMethod.Post))
        {
            <div class="form-group">
                <b>Kitap Ara : &nbsp;</b>
                @Html.TextBox("searchString", ViewBag.SearchString as string, new { @class = "form-control form-control-inline", placeholder = "Aranacak Kitabı Giriniz" })
                <input type="submit" value="Ara" class="btn btn-primary" />
                <div class="mt-4"></div>
            </div>
        }
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kitap Adı</th>
                        <th>Kategori</th>
                        <th>Yazar</th>
                        <th>Basım Yılı</th>
                        <th>Yayınevi</th>
                        <th>Sayfa</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.NAME</td>
                            <td>@item.TBLCATEGORY.NAME</td>
                            <td>@item.TBLWRITER.NAME&nbsp;@item.TBLWRITER.SURNAME</td>
                            <td>@item.PRINTINGYEAR</td>
                            <td>@item.PUBLISHER</td>
                            <td>@item.PAGE</td>
                            <td>@item.SITUATION</td>
                            <td><a href="/Book/BookDelete/@item.ID" class="btn btn-danger">Pasif Duruma Al</a></td>
                            <td><a href="/Book/BookGet/@item.ID" class="btn btn-success">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <a href="/Book/BookAdd/" class="btn btn-primary btn-block">Yeni Kitap Ekle</a>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>