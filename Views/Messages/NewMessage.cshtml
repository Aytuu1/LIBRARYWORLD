@model LIBRARYMVC.Models.Entity.TBLMESSAGES

@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Yeni Mesaj Oluştur</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">
</head>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @Html.Action("Partial")
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                        </div>
                        <form class="form-group" method="post" action="@Url.Action("NewMessage")">
                            <div class="card-body">
                                <div class="form-group">
                                    <input class="form-control" name="BUYER" placeholder="Kime:" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="SUBJECT" placeholder="Konu:" required>
                                </div>
                                <div class="form-group">
                                    <textarea id="compose-textarea" name="CONTENTS" class="form-control" style="height: 300px" placeholder="Mesajınızı Yazın" required></textarea>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            $('#compose-textarea').summernote({
                height: 300,
                callbacks: {
                    onChange: function (contents, $editable) {
                        console.log('Content:', contents); // İçeriği kontrol edin
                    }
                }
            });
        });
    </script>
</body>
</html>
