@using LIBRARYMVC.Models.Entity
@model List<TBLANNOUNCEMENT>
@{
    ViewBag.Title = "Announcement";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Duyurular</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f4f9;
        }

        .announcement-card {
            background-color: #fff3cd;
            border: 1px solid #ffeeba;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .announcement-card .card-header {
                background-color: #ffecb5;
                border-bottom: 1px solid #ffeeba;
                font-weight: bold;
                color: #856404;
            }

            .announcement-card .card-body {
                font-family: 'Arial', sans-serif;
                font-size: 1.1em;
                color: #6b4f1d;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Duyurular</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card announcement-card">
                        <div class="card-header">
                            @item.CATEGORY
                        </div>
                        <div class="card-body">
                            <p class="card-text">@item.CONTENT</p>
                            <p class="card-text"><small class="text-muted">@Convert.ToDateTime(@item.DATE).ToString("dd/MM/yyyy")</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
