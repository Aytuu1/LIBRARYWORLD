@using LIBRARYMVC.Models.Entity
@model List<TBLMOVEMENT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LıbraryLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/table.css" />
<div class="mt-4"></div>
<div class="table-container">
    <table class="table table-striped table-hover">
        <thead>
            <tr style="background-color:#b6ff00;">
                <th>ID</th>
                <th>Kitap Adı</th>
                <th>Üye</th>
                <th>Personel</th>
                <th>Alış Tarihi</th>
                <th>İade Tarihi</th>
                <th>İade Al</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.TBLBOOK.NAME</td>
                    <td>@item.TBLMEMBERS.NAME &nbsp;@item.TBLMEMBERS.SURNAME</td>
                    <td>@item.TBLEMPLOYES.EMPLOYE</td>
                    <td>@Convert.ToDateTime(item.PURCHASEDATE).ToString("dd/MM/yyyy")</td>
                    <td>@Convert.ToDateTime(item.RETURNNDATE).ToString("dd/MM/yyyy")</td>
                    <td><a href="/Loaned/GetRefund/@item.ID" class="btn btn-default" style="background-color:#e2d694">Kitabı İade Et</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
