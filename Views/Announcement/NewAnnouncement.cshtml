<div class="container mt-5">
    <h2 class="mb-4 text-center">Yeni Duyuru Ekle</h2>
    @using (Html.BeginForm("NewAnnouncement", "Announcement", FormMethod.Post))
    {
        <div class="form-group">
            <label>Başlık</label>
            @Html.TextBoxFor(x => x.CATEGORY, new { @class = "form-control" })
          
        </div>
        <div class="form-group">
            <label>İçerik</label>
            @Html.TextAreaFor(x => x.CONTENT, new { @class = "form-control", rows = 5 })
           
        </div>
        <div class="form-group">
            <label>Tarih</label>
            @* @Html.TextBoxFor(x => x.DATE, "{0:dd/MM/yyyy}", new { @class = "form-control" })*@
            <input type="text" class="form-control" name="DATE" value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly style="background-color: #e9ecef;" />



        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-success" href="/Announcement/NewAnnouncemet/">Duyuru Ekle</button>
            <a href="@Url.Action("Index", "Announcement")" class="btn btn-secondary">Geri Dön</a>
        </div>
    }
</div>